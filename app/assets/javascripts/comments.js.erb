jQuery(function() {
  return $('#load_more_comments').on('click', function() {
    var url;
    url = $('.pagination .next a').attr('href');
    if (url) {
      $('#load_more_comments').removeClass("large").html('<%= image_tag "loading-spinner-white.gif", style: "width:30px;" %>');
      $.getScript(url);
    }
  });
});
