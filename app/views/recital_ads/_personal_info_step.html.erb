<div id="personal_errors">
  <% if @recital_ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recital_ad.errors.count, "error") %> prohibited this Recital Ad Order from being saved:</h2>

      <ul>
      <% @recital_ad.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>


<div class="row" id="personal_info">
  <div class="columns small-12">
    <h3>Personal Information</h3>
    
    
    <div class="row">
      <div class="columns large-6 ">
        <%= render partial: 'helper_fields/text', locals: {form: f, field: :firstname, label: "First Name"} %>
      </div>
      <div class="columns large-6 ">
        <%= render partial: 'helper_fields/text', locals: {form: f, field: :lastname, label: "Last Name"} %>
      </div>
    </div>
    
    <!--<div class="row">-->
    <!--  <div class="columns small-12">-->
    <!--    <div class=" input-group">-->
    <!--      <%#= f.label :email, class: "input-group-label" %>-->
    <!--      <%#= f.email_field :email, class: "input-group-field" %>-->
    <!--    </div>-->
    <!--  </div>-->
    <!--</div>-->
    
    
    
    <% unless @recital_ad.recital_ad_type.pdf_file? %> 
      <%= javascript_tag do %>
        window.word_max = "<%= @recital_ad.recital_ad_type.word_max %>";
      <% end %>
      <div class="row">
        <div class="columns small-12">
          <%= f.label :message, ("Message " + "(<span id='count_number_words'>0</span>/" + @recital_ad.recital_ad_type.word_max.to_s + ")").html_safe, class: "input-group-label" %>
          <%= f.text_area :message, size: "40x6", onkeypress: "return check_length(this, document.getElementById('count_number_words'));", placeholder: "Please enter your message" %>
        </div>
      </div>
    <% end %>
    
    <div style="min-height: 100px;">
      <% if @recital_ad.recital_ad_type.image? %>
        <div class="row align-center">
          <div class="columns small-6">
            <%= render partial: 'helper_fields/image_uploader', locals: {form: f, field: :image, image_url: @recital_ad.image_url} %>
          </div>
        </div>
      <% end %>
        
      <% if @recital_ad.recital_ad_type.pdf_file? %>
        <div class="row align-center">
          <div class="columns small-8">
            <%= render partial: 'helper_fields/file_uploader', locals: {form: f, field: :pdf_file, label: "Upload PDF"} %>
          </div>
        </div>
        <% if @recital_ad.pdf_file? %>
          <div class="row align-center">
            <div class="columns shrink">
              Uploaded File:<br>
              <%= @recital_ad.pdf_file_url().to_s %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>