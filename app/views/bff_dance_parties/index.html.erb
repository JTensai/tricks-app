<% given_title = "BFF Dance Parties" %>
<% given_bubbles = [3, 10] %>

<% if defined? given_title %>
  <% content_for :title do %>
    <%= given_title %>
  <% end %>
<% end %>

<% if defined? given_bubbles %>
  <% update_bubbles(given_bubbles) %>
<% end %>

<style>
  h1{
    color: #fa8aae;
  }
  h1 {
    font-size: 60px;
  }
  h4, h5{
    text-align: center;
  }
  .party-info-box{
    text-align: center; 
    border: solid 10px blue; 
    border-radius: 25px; 
    padding:10px;
    margin-bottom: 15px;
  }
  .blue-text{
    color: #23c4e2;
  }
</style>
    <!--<div>-->
    <!--  <%#= image_tag "/assets/site_header_images/parties_header.jpg", style:"margin-top: -120px;" %>-->
    <!--</div>-->
    
<div class="row">
  <div class="columns small-12">
    <h1>BFF Dance Party!</h1>
    <h4>Bring a Friend Friday Dance Parties</h4>
    <h5>Join us for 45 minutes of music, dancing, crafts and fun with friends!</h5>
  </div>
</div>

<div class="row">
  <div class="columns large-12">
    <% if can? :create, BffDanceParty %>
      <h4><%= link_to "(Add New BFF Dance Party)", new_bff_dance_party_path %></h4>
    <% end %>
    <div style="width: 100%; height: 400px; border: solid 3px blue;">
      <%= render partial: 'show', locals: {party: @bff_dance_parties.first, is_first: true} %>
    </div>
    
    
    <h4>Click on a Dance Party Name for Details, and Registration</h4>
    <ul class="accordion" data-accordion data-allow-all-closed="true">
      <% first = true %>
      <% @bff_dance_parties.each do |party| %>
        <% if first then %>
          <% first = false %>
        <% else %>
          <%= render partial: 'show', locals: {party: party, is_first: false} %>
          <% end %>
      <% end %>
    </ul>
    
  </div>
</div>

