<%# 
    Required locals:
    form
    field
    
    Optional locals:
    label
    required
    allow_removal
%>
<% if !defined? label %>
    <% label = "Upload" %>
<% end %>
<% if !defined? required %>
    <% required = false %>
<% end %>
<% if !defined? allow_removal %>
    <% allow_removal = false %>
<% end %>



<% if defined? image_url %>
    <%#= image_tag(image_url, style: "width: 100%; margin-bottom: 15px;") %>
<% end %>

<%= form.label field, label, class: "button expanded" %>
<%= form.file_field field, class: "show-for-sr" %>

<% if allow_removal == true && object.image_url != "/assets/boy_default.jpg" && object.image_url != "/assets/girl_default.jpg" && object.image_url != "/assets/neutral_default.png" %>
    <%= render partial: 'helper_fields/switch', locals: {form: form, field: :remove_image, question: "Remove Picture?"} %>
<% end %>