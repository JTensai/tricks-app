<%# 
    Required locals:
    form
    field
    
    Optional locals:
    field_name
    placeholder
    required
%>
<% if !defined? field_name %>
    <% field_name = "" %>
<% end %>
<% if !defined? placeholder %>
    <% placeholder = "" %>
<% end %>
<% if !defined? required %>
    <% required = false %>
<% end %>

<div class="input-group">
    <%= form.label field, field_name, class: "input-group-label" %>
    <%= form.text_field field, required: required, placeholder: placeholder, class: "input-group-field" %>
</div>