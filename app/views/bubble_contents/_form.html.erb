<%= form_for(@bubble_content) do |f| %>
  <% if @bubble_content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bubble_content.errors.count, "error") %> prohibited this bubble_content from being saved:</h2>

      <ul>
      <% @bubble_content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row align-center">
    <div class="columns large-8 small-11">
      <div class="row">
        <div class="columns large-6 ">
          <%= render partial: 'helper_fields/text', locals: {form: f, field: :text} %>
        </div>
        <div class="columns large-6 ">
          <%= render partial: 'helper_fields/color_picker', locals: {form: f, field: :text_color, label: "Text Color"} %>
        </div>
      </div>
      <div class="row">
        <div class="columns large-6 ">
          <%= render partial: 'helper_fields/image_uploader', locals: {form: f, field: :image, image_url: @bubble_content.image_url} %>
        </div>
        <div class="columns large-6 ">
          <%= render partial: 'helper_fields/color_picker', locals: {form: f, field: :color, label: "Background Color"} %>
        </div>
      </div>
      <div class="row">
        <div class="columns small-12">
          <%= render partial: 'helper_fields/text', locals: {form: f, field: :link} %>
        </div>
      </div>
      <div class="row">
        <div class="columns large-6 ">
          <div class="input-group">
            <%= f.label :sort_order, "Position ID", class: "input-group-label" %>
            <%= f.number_field :sort_order, class: "input-group-field" %>
          </div>
        </div>
        <div class="columns large-6 ">
          <div class="input-group">
            <%= f.label :show_button, "Show Button Under Bubble", class: "input-group-label" %>
            <%= f.check_box :show_button, class: "input-group-field", style: "margin-left: 15px;" %>
          </div>
        </div>
      </div>
      <div class="row align-center" style="margin-bottom: 100px; margin-top: 50px;">
        <div class="columns small-8">
          <%= f.submit class: "button expanded" %>
        </div>
      </div>
    </div>
  </div>


<% end %>
