<div id="levelform">
  <%= form_for(@level) do |f| %>
    <% if @level.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@level.errors.count, "error") %> prohibited this level from being saved:</h2>
        <ul>
          <% @level.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="row align-center">
    <div class="columns large-8 ">
      <div class="row">
        <div class="columns large-6 ">
          <div class="input-group">
            <%= f.label :levelname, "Level", class: "input-group-label" %>
            <%= f.text_field :levelname, class: "input-group-field" %>
          </div>
        </div>
        <div class="columns large-6 ">
          <div class="input-group">
            <%= f.label :jack_rabbit_name, "Jackrabbit Name", class: "input-group-label" %>
            <%= f.text_field :jack_rabbit_name, class: "input-group-field" %>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="columns large-6 ">
          <div class="input-group">
            <%= f.label :classtype_id, "Class Type", class: "input-group-label" %>
            <%= f.collection_select :classtype_id, Classtype.where(:id => 1..9), :id, :name, :prompt => "Select a Class Type", class: "input-group-field" %>
          </div>
        </div>
        <div class="columns large-3 ">
          <div class="input-group">
            <%= f.label :age, class: "input-group-label" %>
            <%= f.text_field :age, class: "input-group-field" %>
          </div>
        </div>
        <div class="columns large-3 ">
          <div class="input-group">
            <%= f.label :gender, class: "input-group-label" %>
            <%= f.select :gender, ['Girls', 'Boys', 'Both'], :prompt => "Select a Gender", class: "input-group-field" %>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="columns large-3 small-6">
          <div class="input-group">
            <%= f.label :length, class: "input-group-label" %>
            <%= f.number_field :length, class: "input-group-field" %>
          </div>
        </div>
        <div class="columns large-3 small-6">
          <div class="input-group">
            <%= f.label :price, class: "input-group-label" %>
            <%= f.number_field :price, class: "input-group-field", value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: :any %>
          </div>
        </div>
        <div class="columns large-6 ">
          <div class="input-group">
            <%= f.label :show_registration, "Beginning Level Class", class: "input-group-label" %>
            <%= f.check_box :show_registration, class: "input-group-field", style: "margin-left: 15px;" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="columns large-6 ">
          <div class="input-group">
            <%= f.label :color, "Class Bar Color", class: "input-group-label" %>
            <%= f.text_field :color, type: 'minicolors', class: "input-group-field" %>
          </div>
        </div>
        <div class="columns large-6 ">
          <div class="input-group">
            <%= f.label :sort_order, class: "input-group-label" %>
            <%= f.number_field :sort_order, class: "input-group-field" %>
          </div>
        </div>
      </div>
      
      
      <div class="row">
        <div class="columns large-6 ">
          <div class="input-group">
            <%= f.label :video_url, class: "input-group-label" %>
            <%= f.text_field :video_url, class: "input-group-field" %>
          </div>
        </div>
        <div class="columns large-6 ">
          <div class="input-group">
            <%= f.label :image, "Upload Image", class: "button expanded" %>
            <%= f.file_field :image, class: "show-for-sr" %>
          </div>
        </div>
      </div>
        
      <div class="row">
        <div class="columns large-12 ">
          <%= f.label :short_description, "Description", class: "input-group-label" %>
          <%= f.text_area :short_description, placeholder: "Text describing what the class is about", style: "height: 150px" %>
        </div>
      </div>

      <div class="row align-center" style="margin-bottom: 100px; margin-top: 50px;">
        <div class="columns small-8">
          <%= f.submit "Submit", class: "button expanded" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>