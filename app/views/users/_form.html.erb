<div id="form">
  <%= form_for(@user) do |f| %>


    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this User from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
		<div class="field">
			<%= f.label :email %><br>
			<%= f.email_field :email %>
		</div>
		<div class="field">
			<%= f.label :password %><br>
			<%= f.password_field :password %>
		</div>
		<div class="field">
			<%= f.label :password_digest, "Password Confirmation" %><br>
			<%= f.password_field :password_confirmation %>
		</div>


		<% if can? :manage, @user %>
			<div class="field">
			    <%= f.label :role %><br>
			    <%= f.radio_button :role, "superadmin" %>
			    <%= label_tag(:role , "Superadmin") %><br>
			    <%= f.radio_button :role, "admin" %>
			    <%= label_tag(:role , "Admin") %><br>
			    <%= f.radio_button :role, "moderator" %>
			    <%= label_tag(:role, "Moderator") %><br>
			    <%= f.radio_button :role, "author" %>
			    <%= label_tag(:role, "Author") %><br>
	  		</div>
	  	<% end %>
		
		<div class="actions"><%= f.submit %></div>

	<% end %>
</div>