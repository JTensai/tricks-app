<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div class="error_messages">
			<h2>Form is invalid</h2>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :email %><br />
		<%= f.email_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation %>
	</div>


	<% if can? :manage, @user %>
		<div class="field">
		    <%= f.label :role %><br />
		    <%= f.radio_button :role, "superadmin" %>
		    <%= label_tag(:role , "superadmin") %><br />
		    <%= f.radio_button :role, "admin" %>
		    <%= label_tag(:role , "admin") %><br />
		    <%= f.radio_button :role, "moderator" %>
		    <%= label_tag(:role, "moderator") %><br />
		    <%= f.radio_button :role, "author" %>
		    <%= label_tag(:role, "author") %><br />
  		</div>
  	<% end %>
	
	<div class="actions"><%= f.submit %></div>

<% end %>
