function ellipsizeTextBox(el) {
    console.log(el);
    var wordArray = el.innerHTML.split(' ');
    while(el.scrollHeight > el.offsetHeight) {
        wordArray.pop();
        el.innerHTML = wordArray.join(' ') + '...';
     }
}
let comments = document.getElementsByClassName("comment");
