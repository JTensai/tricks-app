<%= form_for @surveys_taken  do |f| %>
  <% if @surveys_taken.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@surveys_taken.errors.count, "error") %> prohibited this surveys_taken from being saved:</h2>
      <ul>
      <% @surveys_taken.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1><%= @survey_given.name %></h1>

  <div style="margin: 10px; padding: 0px 20px; border: dashed 1px #444">
    <ol class="questions">
      <% question_count = 0 %>
      <% @survey_given.questions.each do |question| %>
        <% question_count = question_count + 1 %>
        <li>
          <%= question.content %>
          <ol class="answers">
            <%# question.answers.each do |answer| %>
              <!-- <li><%#= answer.content %></li> -->
            <%# end %>
            
            <% question.answers.each do |answer| %>
              <div style="width: 250px;">
                <%= f.label :"#{answer}" do %>
                  <%= f.radio_button :id, answer, style: "margin: 5px; font-weight: normal", class: "answers", name: "question_#{question_count}" %> <%= answer.content %>
                  <div style="float:right">
                    (weight: <%= answer.weight %>)
                  </div>
                  <br>
                <% end %>
              </div>
            <% end %>

          </ol>
        </li>
      <% end %>
    </ol>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
