<%= include_wysiwyg %>


<%= form_for(@party) do |f| %>
  <% if @party.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@party.errors.count, "error") %> prohibited this party from being saved:</h2>

      <ul>
      <% @party.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row align-center">
    <div class="column small-12 large-8">
      <div class="input-group">
        <%= f.label :title, class: "input-group-label" %>
        <%= f.text_field :title, class: "input-group-field" %>
      </div>
    </div>
  </div>
  
  <div class="row align-center">
    <div class="column small-12 large-8">
      <div class="input-group">
        <%= f.label :video, "Video URL", class: "input-group-label" %>
        <%= f.text_field :video, class: "input-group-field" %>
      </div>
    </div>
  </div>
  
  <div class="row align-center" style="margin-bottom: 50px;">
    <div class="column small-12 large-10">
      Insert [VIDEO] where you want the video to be placed
      <%= f.text_area :description, class: "wysiwyg" %>
    </div>
  </div>
  
  <div class="row align-center">
    <div class="column large-3">
      <div class="input-group">
        <%= f.label :image, "Upload Image 1", class: "button expanded" %>
        <%= f.file_field :image, class: "show-for-sr" %>
        <% if !@party.image.nil? %>
          <%= image_tag @party.image_url %>
        <% end %>
      </div>
    </div>
    <div class="column large-3">
      <div class="input-group">
        <%= f.label :image2, "Upload Image 2", class: "button expanded" %>
        <%= f.file_field :image2, class: "show-for-sr" %>
        <% if !@party.image2.nil? %>
          <%= image_tag @party.image2_url %>
        <% end %>
      </div>
    </div>
    <div class="column large-3">
      <div class="input-group">
        <%= f.label :image3, "Upload Image 3", class: "button expanded" %>
        <%= f.file_field :image3, class: "show-for-sr" %>
        <% if !@party.image3.nil? %>
          <%= image_tag @party.image3_url %>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="row align-center" style="margin: 50px 0;">
    <div class="column small-10 large-4">
      <%= f.submit class: "button expanded" %>
    </div>
  </div>
<% end %>
