<div class="columns large-3 medium-4 small-12" id="applicant_container">
    <%# link = employment_application_path(review.employment_application, loc: review.location, dep: review.department) %>
    <% link = employment_application_path(review) %>
    <%= link_to review.employment_application.firstname+" "+review.employment_application.lastname, link, id: "applicant-name" %>
    <h5><%= review.location.titleize + " - " + review.department.titleize %></h5>
    <div class="applicant_image_frame">
        <% app = review.employment_application %>
        <%= link_to image_tag(app.image_new.attached? ? app.image_new : app.image_url), link %>
    </div>
</div>


