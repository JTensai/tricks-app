<div class="row" style="padding: 5px; margin-bottom: 20px;">
	<div class="columns small-12" style="border: solid 2px #888; padding: 15px;">
		<div class="row">
			<div class="columns small-3">
				<h5>Title:</h5>
			</div>
			<div class="columns small-9">
				<%= f.text_field :title %>
			</div>
		</div>
		<div class="row">
			<div class="columns small-12">
				<i><%= f.text_area :description, style: "height: 100px; font-style: italic;" %></i>
			</div>
		</div>
		<div class="row">
	        <div class="columns small-12 input-group">
				<%= f.label :gb_date, "Granite Bay Date", class: "input-group-label" %>
				<%= f.text_field :gb_date, class: "input-group-field gb-date", style: "text-align: right;" %>
	        </div>
		</div>
		<div class="row">
	        <div class="columns small-12 input-group">
				<%= f.label :fol_date, "Folsom Date", class: "input-group-label" %>
				<%= f.text_field :fol_date, class: "input-group-field fol-date", style: "text-align: right;" %>
	        </div>
		</div>
		<div class="row">
	        <div class="columns small-12 input-group">
				<%= f.label :sac_date, "Sacramento Date", class: "input-group-label" %>
				<%= f.text_field :sac_date, class: "input-group-field sac-date", style: "text-align: right;" %>
	        </div>
		</div>
		
		<div class="row align-center">
			<div class="columns small-10">
				<%= f.hidden_field :_destroy %>
				<%= link_to "Remove this Datenight", nil, class: "button alert expanded remove_datenight" %>
			</div>
		</div>
	</div>
</div>