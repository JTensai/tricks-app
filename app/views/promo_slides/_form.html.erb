<div id="form" style="width: 950px;">
  <%= form_for(@promo_slide) do |f| %>
    <% if @promo_slide.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@promo_slide.errors.count, "error") %> prohibited this promo slide from being saved:</h2>

        <ul>
        <% @promo_slide.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field" style="float:left; line-height: 40px; width: 50px;">
      <b><%= f.label :title %>:</b><br>
         
    </div>
    <div class="field" style="float:left; line-height: 40px; width: 900px;">
      <%= f.text_field :title %><br>
      
    </div>

    <div style=" margin: 10px 0px; width: 350px; float:left; line-height: 20px; margin-right: 600px"> 
      <div class="field" style="width: 70px; float:left;">
        <%= f.check_box :live, id: "live_check_box" %>
        <b><%= f.label :live %></b><br>
      </div>
      <div class="field" id="order_input" style="width: 270px; float:right">
        <b><%= f.label :sort_order, "Order: " %></b>
        <% (1..6).each do |i| %>
          <%= f.label :"sort_order_#{i}" do %>
            <%= f.radio_button :sort_order, i, style: "margin-left: 10px", class: "order_radio_buttons" %> <%= i %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div style="float:left; width: 1000px; line-height: 20px; margin: 10px 0px 40px 0px">
      <div class="field">
        <b><%= f.label :data_type, "Data Type: ", style: "margin-right: 20px;" %></b>
        <%= f.label :data_type_image, style: "margin-right: 50px;" do %>
          <%= f.radio_button :data_type, "image", checked: true, id: "image_radio_button" %> Image 
        <% end %>
        <%= f.label :data_type_html do %>
          <%= f.radio_button :data_type, "html", id: "html_radio_button" %> HTML 
        <% end %>
      </div>

      <div id="data_type_image_box">
        <div style="margin: 10px 400px 0px 0px; width: 600px; float:left; line-height: 20px;"> 
          <div class="field" style="width: 70px; float:left; text-align: left">
            <%= f.check_box :link, id: "link_check_box" %>
            <b><%= f.label :link %></b>        
          </div>
          <div class="field" id="link_path_input" style="float:right; padding: 7px; width: 500px; border: dashed 1px; #777; margin-bottom: 20px">
            <b><%= f.label :link_path, "Link Path:" %></b>
            <%= f.text_field :link_path, size: 60 %><br>
            (ie. www.tricksgym.com/'path goes here')<br>
            Full http paths work as well: http://www.google.com
          </div>
        </div>

        <div class="field">          
          <% if @promo_slide.image_url == nil %>
            <b><%= f.label :image, "Picture for Promo: " %></b>
            <%= f.file_field :image %><br>
          <% else %>
            <b><%= f.label :image, "Current Image:" %></b>( <%= File.basename(@promo_slide.image.to_s) %> )<br>
            <b><%= f.label :image, "Choose New Image: " %></b><%= f.file_field :image %><br>
            <%= f.check_box :remove_image %> Remove Image
          <% end %>
        </div>
      </div>

      <div class="field" id="html_input_field" style="display:none">
        <b><%= f.label :html_code %><br></b>
        <p>Please wrap your code in this div tag:<br>&lt;div style="width: 100%; height: 100%;"&#62;</p>
        <% if @promo_slide.html_code == nil %>
          <%= f.text_area :html_code, style: "width: 800px; height: 300px;", value: '<div style="width: 100%; height: 100%;">

  Existing "div" tag is used to place the box correctly in the Promo slide holder. 
  Input your code inside this div.

</div>' %>
        <% else %>
          <%= f.text_area :html_code, style: "width: 800px; height: 300px;" %>
        <% end %>
      </div>
    </div>



      <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>
</div>