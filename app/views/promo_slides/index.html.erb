<h1>Listing Promo Slides</h1>
<h3><%= link_to 'New Promo slide', new_promo_slide_path %></h3>
<table style="margin: 20px auto">
  <tr>
    <th>Order</th>
    <th>Title</th>
    <th>Live</th>
    <th>Data Type</th>
    <th>Date Created</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @live_promo_slides.each do |promo_slide| %>
  <tr>
    <td style="width: 50px;"><%= promo_slide.sort_order %></td>
    <td style="width: 200px;"><%= promo_slide.title %></td>
    <td style="width: 50px;"><%= promo_slide.live %></td>
    <td style="width: 80px;"><%= promo_slide.data_type %></td>
    <td><%= promo_slide.created_at.strftime("%b %e, %Y") %></td>
    <td style="border: none; padding: 3px;"><%= link_to 'Show', promo_slide %></td>
    <td style="border: none; padding: 3px;"><%= link_to 'Edit', edit_promo_slide_path(promo_slide) %></td>
    <td style="border: none; padding: 3px;"><%= link_to 'Destroy', promo_slide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

<% @promo_slides.each do |promo_slide| %>
  <tr>
    <td></td>
    <td><%= promo_slide.title %></td>
    <td><%= promo_slide.live %></td>
    <td><%= promo_slide.data_type %></td>
    <td><%= promo_slide.created_at.strftime("%b %e, %Y") %></td>
    <td style="border: none; padding: 3px;"><%= link_to 'Show', promo_slide %></td>
    <td style="border: none; padding: 3px;"><%= link_to 'Edit', edit_promo_slide_path(promo_slide) %></td>
    <td style="border: none; padding: 3px;"><%= link_to 'Destroy', promo_slide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

