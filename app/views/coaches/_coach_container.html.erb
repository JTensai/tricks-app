<% if can? :manage, Coach %>
  <div id="coach_container">
    <% if coach.current_employee? %>
      <h6><%= link_to coach.firstname+" "+coach.lastname, coach %></h6>
    <% else %>
      <h6><%= link_to coach.firstname+" "+coach.lastname, coach, style: "color: red" %></h6>
    <% end %>
    <div style="width: 115px; margin: 0 auto">
      <%= link_to image_tag(coach.image_url(:small_thumb).to_s), coach %>  
    </div>
  </div>
<% else %>
  <% if coach.current_employee? %>
    <div id="coach_container">
      <h6><%= link_to coach.firstname, coach %></h6>
      <div style="width: 115px; margin: 0 auto">
        <%= link_to image_tag(coach.image_url(:small_thumb).to_s), coach %>      
      </div>    
    </div>
  <% end %>
<% end %>