<h1>Listing Where in the World Submissions</h1>

<table>
  <tr>
    <th>Image</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Location</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @worlds.each do |world| %>
  <tr>
    <td><%= world.image %></td>
    <td><%= world.first_name %></td>
    <td><%= world.last_name %></td>
    <td><%= world.location %></td>
    <td><%= world.date %></td>
    <td><%= link_to 'Show', world %></td>
    <td><%= link_to 'Edit', edit_world_path(world) %></td>
    <% if can? :manage, World %><td><%= link_to 'Destroy', world, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
  </tr>
<% end %>
</table>

