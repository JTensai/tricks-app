<fieldset>
  <%= f.label :content, "Answer" %>:
  <%= f.text_field :content, style: "margin: 4px 0px;" %><br>

  <%= f.label :weight %>:
  <% (1..5).each do |i| %>
    <%= f.label :"weight_#{i}" do %>
      <%= f.radio_button :weight, i, style: "margin-left: 5px" %> <%= i %>
    <% end %>
  <% end %>

  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", '#', class: "remove_fields" %>
</fieldset>